<h1>Users</h1>

<% if can? :create, User %>
  <%= link_to "New User", new_user_registration_path, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", root_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <%= render 'user', user: user %>
    <% end %>
  </tbody>
</table>
