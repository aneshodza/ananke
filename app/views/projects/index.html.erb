<h1>Projects</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each_with_index do |project, idx| %>
      <tr class="user-list-row">
        <%= link_to project_path(project) do %>
          <td scope="row"><%= "##{idx+1}" %></td>
          <td><%= "#{project.name}" %></td>
          <td>
            <%= link_to "Show", project_path(project) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
